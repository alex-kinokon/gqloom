{
  "name": "gqloom",
  "version": "0.0.0",
  "description": "Create GraphQL schema and resolvers with TypeScript, using Zod, Valibot or Yup!",
  "main": "index.js",
  "scripts": {
    "test": "vitest run --typecheck",
    "coverage": "vitest run --coverage",
    "format": "biome format --write .",
    "lint": "biome lint --write .",
    "fix": "biome check --write .",
    "check": "biome check --write . && pnpm run check:type",
    "check:type": "pnpm -r check:type",
    "build": "pnpm -F './packages/core' run build && pnpm -F './packages/{drizzle,federation,mikro-orm,prisma,valibot,yup,zod,json}' run build",
    "prepare": "husky",
    "compose-up": "docker compose up -d",
    "push": "pnpm -F @gqloom/drizzle -F @gqloom/prisma -F example-prisma push",
    "ci:publish": "pnpm -F @gqloom/* publish"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": ["biome check --no-errors-on-unmatched --write"],
    "*.{json,toml,graphql,gql,css}": "biome format --no-errors-on-unmatched --write"
  },
  "keywords": [],
  "author": "xcfox",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@graphql-tools/utils": "^10.1.3",
    "@types/node": "^24.3.0",
    "@typescript/native-preview": "7.0.0-dev.20250721.1",
    "@vitest/coverage-v8": "^3.2.4",
    "graphql": "^16.8.1",
    "husky": "^9.0.11",
    "lint-staged": "^16.1.6",
    "tsdown": "^0.15.1",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.17.0+sha512.fce8a3dd29a4ed2ec566fb53efbb04d8c44a0f05bc6f24a73046910fb9c3ce7afa35a0980500668fa3573345bd644644fa98338fa168235c80f4aa17aa17fbef",
  "pnpm": {
    "patchedDependencies": {
      "graphql@16.8.1": "patches/graphql@16.8.1.patch"
    },
    "overrides": {
      "pg": "^8.13.2"
    }
  }
}
