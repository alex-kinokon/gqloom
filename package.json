{
  "name": "gqloom",
  "version": "0.0.0",
  "description": "Create GraphQL schema and resolvers with TypeScript, using Zod, Valibot or Yup!",
  "main": "index.js",
  "scripts": {
    "test": "vitest --typecheck",
    "coverage": "vitest run --coverage",
    "format": "biome format --write .",
    "lint": "biome lint --write .",
    "check:type": "tsc --noEmit",
    "build": "pnpm -F '@gqloom/*' run build",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "biome format --no-errors-on-unmatched --write",
      "biome lint --no-errors-on-unmatched --write"
    ],
    "*.{json,toml,graphql,gql}": "biome format --no-errors-on-unmatched --write"
  },
  "keywords": [],
  "author": "xcfox",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@eslint/js": "^9.6.0",
    "@graphql-tools/utils": "^10.1.3",
    "@types/node": "^20.11.30",
    "@vitest/coverage-v8": "^1.5.0",
    "commit-and-tag-version": "^12.5.0",
    "graphql": "^16.8.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "tsup": "^8.1.0",
    "tsx": "^4.7.2",
    "typescript": "^5.4.3",
    "vitest": "^1.5.0"
  },
  "packageManager": "pnpm@9.13.2+sha512.88c9c3864450350e65a33587ab801acf946d7c814ed1134da4a924f6df5a2120fd36b46aab68f7cd1d413149112d53c7db3a4136624cfd00ff1846a0c6cef48a",
  "pnpm": {
    "patchedDependencies": {
      "graphql@16.8.1": "patches/graphql@16.8.1.patch"
    }
  }
}
