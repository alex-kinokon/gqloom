{
	"$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"ignore": ["node_modules/**/*"],
		"enabled": true
	},
	"linter": {
		"ignore": ["node_modules/**/*"],
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	}
}
